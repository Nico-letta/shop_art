{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container"><br><br>
    <h1>Catégories</h1><br>
    
    {% include 'layouts/_flash_message.html.twig' %}

    <table class="table">
        <tr>
            <th>id</th>
            <th>Nom de la catégorie</th>
            <th>Actions</th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id}}</td>
                <td>{{ category.name}}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{path('app_category_update',{'id':category.id})}}">Modifier</a>
                    <a onclick="return confirm('Voulez-vous supprimer cette catégorie')" class="btn btn-danger" href="{{path('app_category_delete',{'id':category.id})}}">Supprimer</a>
                </td>
            </tr>
            {% else %}
            <p><i>Aucune catégorie à Afficher pour l'instant</i></p>
        {% endfor %}
    </table>
    <a class="btn btn-outline-primary" href="{{path('app_category_new')}}">Ajouter une catégorie</a>
</div>
    
{% endblock %}
